    <recordUpdates>
        <name>Update_Opportunity_of_Failed_Transaction</name>
        <label>Update Opportunity of Failed Transaction</label>
        <locationX>220</locationX>
        <locationY>576</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.bt_stripe__Opportunity2__r.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Failed_Transaction__c</field>
            <value>
                <stringValue>Yes</stringValue>
            </value>
        </inputAssignments>
        <object>Opportunity</object>
    </recordUpdates>
