<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <decisions>
        <name>Does_client_have_an_email_listed</name>
        <label>Does client have an email listed?</label>
        <locationX>220</locationX>
        <locationY>384</locationY>
        <defaultConnector>
            <targetReference>Update_Opportunity_of_Failed_Transaction</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No email</defaultConnectorLabel>
        <rules>
            <name>Yes_Has_an_email</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.bt_stripe__Related_Contact__r.Email</leftValueReference>
                <operator>IsNull</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opportunity_of_Failed_Transaction</targetReference>
            </connector>
            <label>Yes - Has an email</label>
        </rules>
    </decisions>
    <decisions>
        <name>Failed_or</name>
        <label>Failed or Completed</label>
        <locationX>484</locationX>
        <locationY>276</locationY>
        <defaultConnectorLabel>Default</defaultConnectorLabel>
        <rules>
            <name>Failed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.bt_stripe__Transaction_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Failed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.bt_stripe__Payment_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Uncaptured</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Does_client_have_an_email_listed</targetReference>
            </connector>
            <label>Failed?</label>
        </rules>
        <rules>
            <name>Completed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.bt_stripe__Transaction_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Completed</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.bt_stripe__Payment_Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Captured</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Opportunity_of_captured_Transaction</targetReference>
            </connector>
            <label>Completed?</label>
        </rules>
    </decisions>
    <description>This flow is designed to carry out functions when a transaction record payment status is set to fail.</description>
    <environments>Default</environments>
    <formulas>
        <name>forB_IsNew</name>
        <dataType>Boolean</dataType>
        <expression>IsNew()</expression>
    </formulas>
    <interviewLabel>RTF: Transaction Created Actions &amp; Updates Flow {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RTF: Payment Status Notification Email</label>
