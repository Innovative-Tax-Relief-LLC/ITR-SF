<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>62.0</apiVersion>
    <decisions>
        <name>Is_New</name>
        <label>Is New</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <defaultConnector>
            <targetReference>Owner_chnaged</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No-IsUpdate</defaultConnectorLabel>
        <rules>
            <name>Yes_New</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>IsNew</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Yes-New</label>
        </rules>
    </decisions>
    <decisions>
        <name>Owner_chnaged</name>
        <label>Owner chnaged</label>
        <locationX>374</locationX>
        <locationY>431</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Case_Manager_is_not_the_owner</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record__Prior.OwnerId</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>$Label.Case_Manager_Queue_Id</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.OwnerId</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <elementReference>$Label.Case_Manager_Queue_Id</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Task</targetReference>
            </connector>
            <label>Case Manager is not the owner</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>forT_DueDate</name>
        <dataType>Date</dataType>
        <expression>TODAY()+7</expression>
    </formulas>
    <formulas>
        <name>forT_Subject</name>
        <dataType>String</dataType>
        <expression>{!$Record.Account.FirstName} + &quot; &quot; + {!$Record.Account.LastName} &amp;&quot;- Intro Pending -&quot;&amp;TEXT({!$Record.Type})</expression>
    </formulas>
    <formulas>
        <name>IsNew</name>
        <dataType>Boolean</dataType>
        <expression>ISNEW()</expression>
    </formulas>
    <interviewLabel>RTF: Create Records {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RTF: Create Records based on Case owner</label>
    <processMetadataValues>
